# Restaurant AI Frontend - Environment Variables
# Copy this file to .env.local and configure for your environment

# Backend API URL - Required
# For local development: http://localhost:5000/api/v1
# For production: https://your-backend-domain.com/api/v1
NEXT_PUBLIC_API_URL=http://localhost:5000/api/v1

# App Configuration
NEXT_PUBLIC_APP_NAME=RestaurantAI
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Sentry Error Tracking (optional - for production)
# NEXT_PUBLIC_SENTRY_DSN=

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=
