# ============================================
# Restaurant SaaS - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env with real secrets to git!

# ===========================================
# AI Configuration (Groq - Free & Fast!)
# ===========================================
# Get your free API key at: https://console.groq.com
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.3-70b-versatile

# ===========================================
# Database Configuration
# ===========================================
# Development: SQLite (no setup needed!)
DATABASE_URL=sqlite+aiosqlite:///./restaurant.db

# For Production PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/restaurant_db

# ===========================================
# Application Configuration
# ===========================================
ENVIRONMENT=development
DEBUG=false
APP_NAME=Smart Restaurant SaaS
APP_VERSION=1.0.0

# ===========================================
# Security Configuration (CHANGE IN PRODUCTION!)
# ===========================================
# Generate a strong secret key: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-RANDOM-STRING

# ===========================================
# JWT Configuration
# ===========================================
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================================
# API Configuration
# ===========================================
API_HOST=127.0.0.1
API_PORT=5000

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGINS_STR=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# ML Configuration
# ===========================================
ML_MODELS_PATH=./ml/models
EMBEDDINGS_PATH=./ml/embeddings

# ===========================================
# Redis (Optional - for caching)
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false
