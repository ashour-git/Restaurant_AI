# Backend Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Restaurant SaaS API"
APP_VERSION="1.0.0"
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# SECURITY (REQUIRED - Change in Production!)
# =============================================================================
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_ALGORITHM=HS256
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DATABASE
# =============================================================================
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/dbname
#
# For Railway: Use the DATABASE_URL provided by Railway Postgres add-on
# For Render: Use the Internal Database URL from Render Postgres
#
# SQLite (development only):
DATABASE_URL=sqlite:///./restaurant.db

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Add your Vercel frontend URL here (comma-separated for multiple origins)
# Example: https://your-app.vercel.app,https://custom-domain.com
CORS_ORIGINS_STR=https://your-app.vercel.app,http://localhost:3000

# =============================================================================
# AI/ML SETTINGS
# =============================================================================
# Groq API Key for Llama 3.3 70B - Get from https://console.groq.com
GROQ_API_KEY=your-groq-api-key

# Model paths (relative to project root)
ML_MODELS_PATH=./ml/models
EMBEDDINGS_PATH=./ml/embeddings

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
# Leave empty to use in-memory caching
REDIS_URL=
REDIS_CACHE_TTL=3600

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
